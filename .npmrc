# Optimize npm performance

# Use the official npm registry
registry=https://registry.npmjs.org/

# Speed optimizations
save-exact=true
fund=false
audit=false
loglevel=error
prefer-offline=true
cache-min=3600
progress=false

# Parallel operations
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
network-timeout=300000

# Cache optimizations
cache-max=Infinity
package-lock=false
package-lock-only=false

# Reduce output noise
update-notifier=false
strict-peer-dependencies=false

# Faster installs
ignore-scripts=true
no-optional=true
no-fund=true
no-audit=true

# Disable npm notices
no-deprecation=true
no-warnings=true

# Faster git operations
git-tag-version=false
commit-hooks=false

# Use hard links instead of copying for local installs
bin-links=true
link=true

# Faster builds
fetch-timeout=300000
fetch-retries=2
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
